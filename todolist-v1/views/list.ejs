<%- include("header") -%>

<div class="box" id="heading">
    <h1><%= day %></h1>
</div>

<div class="box">
    <% for(var i = 0; i < newTaskItems.length; i++) { %>
    <div class="item">
        <input type="checkbox">
        <p><%= newTaskItems[i] %></p>
    </div>
    <% } %>


    <form class="item" method="POST" action="/">
        <input type="text" name="newTask" placeholder="New Item" autocomplete="off">
        <button type="submit" name="button">+</button>
    </form>
</div>

<%- include("footer") -%>